<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/WaterReportCreateTitle"
    android:weightSum="1"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:text="Create Water Report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_weight="0.08" />

    <TextView
        android:text="Date and Time:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAlignment="textStart"
        android:textSize="14dp" />

    <TextView
        android:text="[The Date]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportDate"
        android:layout_weight="0.04"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Report Number:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <TextView
        android:text="[Report Number]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportNum"
        android:layout_weight="0.04"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Name of Reporter:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />

    <TextView
        android:text="[Name of User]"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportReportName"
        android:layout_weight="0.12"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:text="Latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:id="@+id/reportLocationLat" />

    <TextView
        android:text="Longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:id="@+id/reportLocationLong"
        android:layout_weight="0.08" />

    <TextView
        android:text="Water Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WaterTypeSpin"
        android:layout_weight="0.04" />

    <TextView
        android:text="Water Condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView14" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WaterCondSpin"
        android:layout_weight="0.11" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18" />

    <Button
        android:text="Create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportCreateButton" />

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reportCancelButton" />

</LinearLayout>