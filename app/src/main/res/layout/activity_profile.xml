<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.starlabs.h2o.controller.user.ViewUserProfileFragment">

    <TextView
        android:id="@+id/user_profile_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="User Profile"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/user_profile_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_name_field"
        android:layout_marginTop="38dp"
        android:text="Email:"/>

    <TextView
        android:id="@+id/user_profile_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_title_text"
        android:layout_marginTop="11dp"
        android:text="Name:"/>

    <TextView
        android:id="@+id/user_profile_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_email"
        android:layout_marginTop="28dp"
        android:text="Home Address:"/>

    <EditText
        android:id="@+id/user_profile_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_address_text"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:labelFor="@id/user_profile_address"
        android:text="Home Address"/>

    <Button
        android:id="@+id/profile_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_address"
        android:layout_marginTop="65dp"
        android:text="Done"/>

    <Button
        android:id="@+id/profile_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_done_button"
        android:layout_marginTop="12dp"
        android:text="Cancel"/>

    <EditText
        android:id="@+id/user_profile_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_name_text"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/user_profile_name_field"
        android:text="Name"/>

    <EditText
        android:id="@+id/user_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_profile_email_text"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:labelFor="@id/user_profile_email"
        android:text="Email"/>

</RelativeLayout>
