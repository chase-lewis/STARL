<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_histogram_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/histogramReportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="View Histogram"
        android:textAlignment="center"
        android:textSize="20dp" />


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:id="@+id/histogramGraph" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EMPTY_SPACER"
        android:layout_weight="0.06" />

    <TextView
        android:id="@+id/histogramSpinnerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="Virus or Contaminant:"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/histogramSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EMPTYSPACER"
        android:layout_weight="0.06" />

    <Button
        android:id="@+id/updateHistogramButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Histogram"
        android:layout_weight="0.06" />

    <Button
        android:id="@+id/histogramCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />

</LinearLayout>
